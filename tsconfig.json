{
  "compilerOptions": {
    "outDir": ".types",
    "incremental": true,
    "assumeChangesOnlyAffectDirectDependencies": true,
    "emitDeclarationOnly": true,
    "module": "ESNext",
    "target": "ESNext",
    "skipLibCheck": true,
    "strict": true,
    "declaration": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "paths": {
      "@esbx/*": ["./packages/*/src"],
      "esbx": ["./packages/cli/src"]
    }
  },
  "include": ["packages"],
  "exclude": ["node_modules"]
}
